#!/bin/zsh

PROJECT=$1
RED='\033[1;31m'
BLUE='\033[1;34m'
CYAN='\033[1;36m'
NC='\033[0m'


print_header () {
    echo -e "${BLUE}" && toilet -f future "Chimera Labs"
    echo -e "${CYAN}" && toilet -f future "       C++17"
    echo "${NC}"
}


##
## Check for duplicates
if [[ -d $PROJECT ]]; then
    echo "${RED}The project '${PROJECT}' already exists, nothing to do here.${NC}"
    exit 0
fi


##
## Check internet connection
## TODO: Provide some kind of offline generator without bloating the script too much.
## TODO: Create separate 'mkcpp-app' and 'mkcpp-lib' to generate binary and library
##       projects inside an existing workspace.
HASNET=$(curl -Is https://google.com | head -1)
if [[ -z $HASNET ]]; then
    HASNET="true"
else
    HASNET="false"
fi


##
## Project Initialization
if [[ ! -z $PROJECT ]]; then
    print_header
    echo "Fetching template for project ${BLUE}${PROJECT}${NC}..."
    
    git clone --quiet git@gitlab.com:chimeralabs/cpp17-modern.git "${PROJECT}"
    cd "${PROJECT}"
    rm -Rf ./.git/
    git init --quiet .
    cd ..
    
    echo "${CYAN}All done! :3${NC}"
    echo ""
    tree --dirsfirst "${PROJECT}" 
    exit 0
fi

##
## Help message
SELF=`basename $0`
print_header
echo ""
echo "To create a new workspace for a C++17 multi project, run:"
echo "${BLUE}\$${NC} ${SELF} <workspace>"
echo ""
echo ""

    
